<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
		<!-- override order item template -->
		<referenceBlock name="order_items">
			<action method="setOverriddenTemplates">
				<argument xsi:type="array">
					<!-- list override templates -->
					<item name="default" xsi:type="string">Faonni_OverrideOrderItemTemplate::order/items/renderer/default.phtml</item>
					<item name="simple" xsi:type="string">Faonni_OverrideOrderItemTemplate::order/items/renderer/default.phtml</item>
					<item name="virtual" xsi:type="string">Faonni_OverrideOrderItemTemplate::order/items/renderer/default.phtml</item>
				</argument>
			</action>
		</referenceBlock>	
    </body>
</page>
